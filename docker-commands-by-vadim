#arangod docker SS NO auth:
#==========================
#--------------------------
docker run --rm -e ARANGO_NO_AUTH=1 -p 9529:9529 arangodb/enterprise-preview:3.6.0 arangod --server.endpoint tcp://0.0.0.0:9529
#--------------------------
#==========================

#arangod docker SS WITH auth (ARANGO_ROOT_PASSWORD):
#==========================
#--------------------------
docker run --rm -e ARANGO_ROOT_PASSWORD="" -p 9529:9529 arangodb/enterprise-preview:3.6.0 arangod --server.endpoint tcp://0.0.0.0:9529
#--------------------------
#==========================

#arangod docker SS WITH auth (ARANGO_RANDOM_ROOT_PASSWORD):
#==========================
#--------------------------
docker run --rm -e ARANGO_RANDOM_ROOT_PASSWORD=1 -p 9529:9529 arangodb/enterprise-preview:3.6.0 arangod --server.endpoint tcp://0.0.0.0:9529
#--------------------------
#==========================

#arangodb docker SS NO auth:
#==========================
#--------------------------
docker volume rm arangodb
docker volume create arangodb
docker run -it --name adb --rm -p 9528:9528 -v arangodb:/data -v /var/run/docker.sock:/var/run/docker.sock arangodb/arangodb-starter --starter.address=127.0.0.1 --starter.port 9528 --starter.mode=single --docker.image=arangodb/enterprise-preview:3.6.0
#--------------------------
#==========================

#arangodb docker SS WITH auth:
#==========================
#--------------------------
docker volume rm arangodb
docker volume create arangodb
docker run -it --name adb --rm -p 9528:9528 -v arangodb:/data -v /var/run/docker.sock:/var/run/docker.sock -v /home/vadim:/secret arangodb/arangodb-starter --starter.address=127.0.0.1 --starter.port 9528 --starter.mode=single --docker.image=arangodb/enterprise-preview:3.6.0 --auth.jwt-secret=/secret/jwtSecret
#--------------------------
#==========================


#arangod docker CLUSTER NO auth:
#==========
#Agencies:
#---------
docker run -e ARANGO_NO_AUTH=1 -p 127.0.0.1:5001:5001 arangodb/enterprise-preview:3.6.0 arangod --server.endpoint tcp://0.0.0.0:5001 --agency.my-address=tcp://127.0.0.1:5001 --agency.activate true --agency.size 3 --agency.endpoint tcp://127.0.0.1:5001 --agency.supervision true --database.directory agent1 &

docker run -e ARANGO_NO_AUTH=1 -p 127.0.0.1:5002:5002 arangodb/enterprise-preview:3.6.0 arangod --server.endpoint tcp://0.0.0.0:5002 --agency.my-address=tcp://127.0.0.1:5002 --agency.activate true --agency.size 3 --agency.endpoint tcp://127.0.0.1:5001 --agency.supervision true --database.directory agent2 &

docker run -e ARANGO_NO_AUTH=1 -p 127.0.0.1:5003:5003 arangodb/enterprise-preview:3.6.0 arangod --server.endpoint tcp://0.0.0.0:5003 --agency.my-address=tcp://127.0.0.1:5003 --agency.activate true --agency.size 3 --agency.endpoint tcp://127.0.0.1:5001 --agency.supervision true --database.directory agent3 &
#---------

#DBServers:
#----------
docker run -e ARANGO_NO_AUTH=1 -p 127.0.0.1:6001:6001 arangodb/enterprise-preview:3.6.0 arangod --server.endpoint tcp://0.0.0.0:6001 --cluster.my-address tcp://127.0.0.1:6001 --cluster.my-role DBSERVER --cluster.agency-endpoint tcp://127.0.0.1:5001 --cluster.agency-endpoint tcp://127.0.0.1:5002 --cluster.agency-endpoint tcp://127.0.0.1:5003  --database.directory singleserver6001 &

docker run -e ARANGO_NO_AUTH=1 -p 127.0.0.1:6002:6002 arangodb/enterprise-preview:3.6.0 arangod --server.endpoint tcp://0.0.0.0:6002 --cluster.my-address tcp://127.0.0.1:6002 --cluster.my-role DBSERVER --cluster.agency-endpoint tcp://127.0.0.1:5001 --cluster.agency-endpoint tcp://127.0.0.1:5002 --cluster.agency-endpoint tcp://127.0.0.1:5003 --database.directory singleserver6002 &

docker run -e ARANGO_NO_AUTH=1 -p 127.0.0.1:6003:6003 arangodb/enterprise-preview:3.6.0 arangod --server.endpoint tcp://0.0.0.0:6003 --cluster.my-address tcp://127.0.0.1:6003 --cluster.my-role DBSERVER --cluster.agency-endpoint tcp://127.0.0.1:5001 --cluster.agency-endpoint tcp://127.0.0.1:5002 --cluster.agency-endpoint tcp://127.0.0.1:5003 --database.directory singleserver6003 &
#----------

#Coordinators:
#----------
docker run -e ARANGO_NO_AUTH=1 -p 127.0.0.1:7001:7001 arangodb/enterprise-preview:3.6.0 arangod --server.endpoint tcp://0.0.0.0:7001 --cluster.my-address tcp://127.0.0.1:7001 --cluster.my-role COORDINATOR --cluster.agency-endpoint tcp://127.0.0.1:5001 --cluster.agency-endpoint tcp://127.0.0.1:5002 --cluster.agency-endpoint tcp://127.0.0.1:5003 --database.directory coordinator7001 &

docker run -e ARANGO_NO_AUTH=1 -p 127.0.0.1:7002:7002 arangodb/enterprise-preview:3.6.0 arangod --server.endpoint tcp://0.0.0.0:7002 --cluster.my-address tcp://127.0.0.1:7002 --cluster.my-role COORDINATOR --cluster.agency-endpoint tcp://127.0.0.1:5001 --cluster.agency-endpoint tcp://127.0.0.1:5002 --cluster.agency-endpoint tcp://127.0.0.1:5003 --database.directory coordinator7002 &

docker run -e ARANGO_NO_AUTH=1 -p 127.0.0.1:7003:7003 arangodb/enterprise-preview:3.6.0 arangod --server.endpoint tcp://0.0.0.0:7003 --cluster.my-address tcp://127.0.0.1:7003 --cluster.my-role COORDINATOR --cluster.agency-endpoint tcp://127.0.0.1:5001 --cluster.agency-endpoint tcp://127.0.0.1:5002 --cluster.agency-endpoint tcp://127.0.0.1:5003 --database.directory coordinator7003 &
