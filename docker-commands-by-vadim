docker run -it --name adb2 --rm -p 11000:9528 -v /home/vadim:/secret -v /var/run/docker.sock:/var/run/docker.sock arangodb/arangodb-starter --starter.address=127.0.0.1 --starter.port 9528 --docker.image=arangodb/enterprise-preview:3.6.0 --starter.mode activefailover --starter.join 127.0.0.1:10000 --auth.jwt-secret=/secret/jwtSecret

